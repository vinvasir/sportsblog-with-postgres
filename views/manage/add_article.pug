extends ../layout

block content
	h1 #{title}
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method="post" action="/articles")
		.form-group
			label Title:
			input.form-control(type="text" name="title")
		.form-group
			label Subtitle:
			input.form-control(type="text" name="subtitle")
		.form-group
			label Category:
			select.form-control(name='category_id')
				each category, i in categories
					option(value=category.id) #{category.title}
		.form-group
			label Author:
			input.form-control(type="text" name="author")
		.form-group
			label Body:
			textarea.form-control(name="body")
		input.btn.btn-primary(type="submit" value="Create article")
		a.btn.btn-danger(href='/manage/articles') Back	