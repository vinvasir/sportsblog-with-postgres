extends ../layout

block content
	h1 #{title}
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method="post" action="/categories")
		.form-group
			label Title:
			input.form-control(type="text" name="title")
		.form-group
			label Description
			textarea.form-control(name="description")
		input.btn.btn-primary(type="submit" value="Create category")
		a.btn.btn-danger(href='/manage/categories') Back
